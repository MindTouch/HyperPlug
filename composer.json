{
  "name": "modethirteen/hyperplug",
  "description": "A PHP library for plugging into HTTP sockets",
  "type": "library",
  "license": "Apache-2.0",
  "authors" : [
    {
      "name": "James Andrew Vaughn",
      "email": "jamesvaughn@modethirteen.com",
      "role": "maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/modethirteen/hyperplug/issues"
  },
  "require": {
    "php": "^7.2.0",
    "modethirteen/xarray": "~1.2.0",
    "ext-fileinfo": "*",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "~0.12.0",
    "phpunit/phpunit": "~7.4.0"
  },
  "autoload": {
    "psr-4": {
      "modethirteen\\Http\\": ["src/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "modethirteen\\Http\\Tests\\": ["tests/"]
    }
  }
}
